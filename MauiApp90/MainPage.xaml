<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp90.MainPage"
             Title="Trivia Game"
             BackgroundImageSource="Marvel.jpg"
             BackgroundColor="Black"
             Padding= "0" >

        <AbsoluteLayout Padding="0" Margin="0">
        <!-- Black screen overlay at the beginning -->
        <Image x:Name="LoadingImage"
               Source="backrounddwww.png" 
               Aspect="AspectFill"
               IsVisible="True"
               AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
               AbsoluteLayout.LayoutFlags="All" />


            <!-- Spinning cirlce -->
        <ActivityIndicator x:Name="LoadingIndicator"
                       IsRunning="True"
                       IsVisible="True"
                       Color="White"
                     HorizontalOptions="Center"
                       VerticalOptions="Center"
                       HeightRequest="120"
                       WidthRequest="120"
                       AbsoluteLayout.LayoutBounds="0.5, 0.9, 200, 200" 
                       AbsoluteLayout.LayoutFlags="WidthProportional, PositionProportional" />
            
        <!-- percentage -->
        <Label x:Name="PercentageLabel"
               Text="0%"  
               FontSize="50"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               AbsoluteLayout.LayoutBounds="0.5, 1.1, 200, 200"
               AbsoluteLayout.LayoutFlags="PositionProportional" />

       
            <StackLayout IsVisible="False" x:Name="MainContent"
                      AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                      AbsoluteLayout.LayoutFlags="All"
                      Padding="30,0">
            
        <Label Text="A ROAN BRADLEY PRODUCITON©"
               FontSize="10"
               FontFamily="sans-serif-medium "
               TextColor="White"
               HorizontalOptions="Start"
               VerticalOptions="Start"
               Margin="-20,-45,0,0"/>

          
            <HorizontalStackLayout Spacing="10" 
                               VerticalOptions="Center" 
                               HorizontalOptions="Center"
                               Margin="0,50,0,0">

                <!--lets go button-->
                <Frame BackgroundColor="Transparent" Padding="0">
                <Button
                    x:Name="CounterBtn"
                    Text="LETS QUIZ!" 
                    FontSize="10"
                    FontFamily="Arial"
                    FontAttributes="Bold"
                    Clicked="OnStartGameClicked" 
                    WidthRequest="150"
                    HeightRequest="75"
                    CornerRadius="25"
                    BackgroundColor="Black"
                    TextColor="White"
                    BorderColor="Transparent"
                    BorderWidth="2">
                    
                    <!-- Add Gesture Recognizer for hover events -->
                    <Button.GestureRecognizers>
                        <PointerGestureRecognizer
                            PointerEntered="PointerGestureRecognizer_PointerEntered"
                            PointerExited="PointerGestureRecognizer_PointerExited"/>
                    </Button.GestureRecognizers>
                </Button>
            </Frame>

           
                <!-- settings button  -->
                <Frame BackgroundColor="Transparent" Padding="0">
                <Button
                 x:Name="SettingsButton"
                 Text="SETTINGS"
                 TextColor="White"
                 FontSize="10"
                 FontFamily="Arial"
                 FontAttributes="Bold"
                 Clicked="SettingsButton_Clicked"
                 WidthRequest="150"
                 HeightRequest="75"
                 CornerRadius="25"
                 BackgroundColor="Black"
                 BorderColor="Transparent"
                 BorderWidth="2"
                 AbsoluteLayout.LayoutBounds="1, 0, AutoSize, AutoSize"  
                 AbsoluteLayout.LayoutFlags="PositionProportional" >
                        <Button.GestureRecognizers>
                            <PointerGestureRecognizer
                            PointerEntered="PointerGestureRecognizer_PointerEntered_2" 
                            PointerExited="PointerGestureRecognizer_PointerExited_2"/>
                        </Button.GestureRecognizers>
                    </Button>
                </Frame>



            </HorizontalStackLayout>
    </StackLayout>

        <!-- settings menu -->
        <StackLayout x:Name="SettingsTab"
                 BackgroundColor="#660000"
                 IsVisible="False"
                 AbsoluteLayout.LayoutBounds="0, 0, 0.25, 1"
                 AbsoluteLayout.LayoutFlags="All"
                 Padding="10">
            
            <Label 
               Text="MENU"
               FontSize="25"
               FontAttributes="Bold"
               TextColor="White"
               HorizontalOptions="Center" />

            <Image Source="pfpnumber.jpg" 
                HorizontalOptions="FillAndExpand"
                   VerticalOptions="Center"
                   HeightRequest="200"
                   WidthRequest="320"
                   Margin="0,10,0,20" />

                <StackLayout Orientation="Vertical" Spacing="15"
                AbsoluteLayout.LayoutBounds="0, 0, 0.25, 1"
                     AbsoluteLayout.LayoutFlags="All"
                     Padding="10"
                    
             
                HorizontalOptions="CenterAndExpand">

                <Button x:Name="BackgroundMusicButton"
                    Text="BACKGROUND MUSIC ON/OFF"
                    FontAttributes="Bold"
                    TextColor="White"
                    BackgroundColor="Red" 
                    FontSize="18"
                    Clicked="BackgroundMusicButton_Clicked"
                   
                    HeightRequest="50"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="Center"
                    Padding="15"
                    Margin="0,5" />


                <Button x:Name="InstructionButton"
                    Text="INSTRUCTIONS"
                    TextColor="White"
                    FontSize="18"
                    FontFamily="Arial"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    BackgroundColor="Red"
                    WidthRequest="300"
                    HeightRequest="50"
                    HorizontalOptions="Center"
                    Margin="0,5" 
                    Clicked="InstructionButton_Clicked" />
            </StackLayout>
        </StackLayout>

    </AbsoluteLayout>
</ContentPage>
